{
  "expo": {
    "name": "TaskList",
    "slug": "tasklist",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "platforms": [
      "ios",
      "android"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tasklist.app"
    },
    "android": {
      "package": "com.tasklist.app"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "newArchEnabled": false
          },
          "ios": {
            "newArchEnabled": false
          }
        }
      ],
      "@react-native-community/datetimepicker"
    ]
  }
}
